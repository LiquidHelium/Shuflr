{
    "filesGlob": [
        "../typings/**/*.*.ts",
        "**/*.{ts}"
    ],
    "compilerOptions": {
      "outDir": "build",
      "allowSyntheticDefaultImports": true,      
      "module": "commonjs",
      "target": "es2017",
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "lib": ["es2015", "dom"],      
      "moduleResolution": "node",
      "rootDir": "src",
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true
    },
    "include": [
      "src",
      "types"
    ]
  }