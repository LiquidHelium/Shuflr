{
  "name": "shuflr",
  "version": "0.0.1",
  "engines": {
    "node": "8.4.0",
    "npm": "5.3.0"
  },
  "scripts": {
    "start": "node build/server/index.js",
    "watch-server": "nodemon --watch src --ext ts --exec npm run build-and-start",
    "watch-client": "webpack -w",
    "build-and-start": "npm run build-server && npm run start",
    "build-client": "webpack",
    "build-server": "tsc -p .",
    "build-static": "copyfiles -f src/static/* build/static",
    "build-templates": "copyfiles -f src/server/templates/* build/server/templates",
    "build": "npm run build-server && npm run build-static && npm run build-templates && npm run build-client",
    "test": "jest",
    "lint": "tslint -p .",
    "test-all": "npm run test && npm run lint",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "bluebird": "^3.5.0",
    "dotenv": "^4.0.0",
    "ejs": "^2.5.6",
    "koa": "^2.2.0",
    "koa-mount": "^3.0.0",
    "koa-router": "^7.1.1",
    "koa-static": "^4.0.1",
    "pg": "^7.2.0",
    "ramda": "^0.24.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.4",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-youtube": "^7.4.0",
    "redux": "^3.6.0",
    "redux-saga": "^0.15.6",
    "reflect-metadata": "^0.1.10",
    "typeorm": "^0.1.0-alpha.35",
    "youtube-api": "^2.0.8"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.8",
    "@types/ejs": "^2.3.33",
    "@types/enzyme": "^2.8.6",
    "@types/jest": "^20.0.7",
    "@types/koa": "^2.0.39",
    "@types/koa-mount": "^2.0.18",
    "@types/koa-router": "^7.0.22",
    "@types/koa-static": "^3.0.0",
    "@types/node": "^8.0.25",
    "@types/ramda": "^0.24.7",
    "@types/react": "^16.0.2",
    "@types/react-dom": "^15.5.3",
    "@types/react-redux": "^5.0.5",
    "@types/react-router": "^4.0.15",
    "@types/react-router-dom": "^4.0.7",
    "@types/supertest": "^2.0.2",
    "copyfiles": "^1.2.0",
    "css-loader": "^0.28.5",
    "enzyme": "^2.8.2",
    "extract-text-webpack-plugin": "^3.0.0",
    "jest": "^20.0.1",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "react-test-renderer": "^15.5.4",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "supertest": "^3.0.0",
    "ts-jest": "^20.0.10",
    "ts-loader": "^2.3.3",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "tslint-config-airbnb": "^5.2.1",
    "typescript": "^2.4.2",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.7.1"
  },
  "jest": {
    "roots": [
      "<rootDir>/src/"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/src/__mocks__/styleMock.js"
    }
  }
}
